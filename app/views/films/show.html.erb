<h1>Films#show</h1>
<p>Find me in app/views/films/show.html.erb</p>
<% @film.ratings.each do |rating| %>
  <%= rating.rating %>
<% end %>
<br>
<p>Reviews</p>
<% @film.reviews.each do |review| %>
  <%= review.body %>
<% end %>

<p>Comments</p>
<% @film.comments.each do |comment| %>
  <%= comment.description %>
<% end %>
<p>Rating: <%= render '/ratings/new' %></p>
<p>Review: <%= render '/reviews/new' %></p>
<p>Comment: <%= render '/comments/new' %></p>
